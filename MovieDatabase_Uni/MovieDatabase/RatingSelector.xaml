<UserControl x:Class="MovieDatabase.RatingSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieDatabase"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="268">
    <Grid>
        <GroupBox Header="Rating" BorderThickness="0.5">
            <WrapPanel>
                <RadioButton x:Name="Rb1" GroupName="ratingrp" Content="1" Margin="1" />
                <RadioButton x:Name="Rb2" GroupName="ratingrp" Content="2" Margin="1" />
                <RadioButton x:Name="Rb3" GroupName="ratingrp" Content="3" Margin="1" />
                <RadioButton x:Name="Rb4" GroupName="ratingrp" Content="4" Margin="1" />
                <RadioButton x:Name="Rb5" GroupName="ratingrp" Content="5" Margin="1" />
            </WrapPanel>
        </GroupBox>
    </Grid>
</UserControl>
